<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400">
    <Grid>
        <Grid.RowDefinitions>
                <RowDefinition Height="93*"/>
                <RowDefinition Height="56*"/>
                <RowDefinition Height="51*"/>
                <RowDefinition Height="56*"/>
                <RowDefinition Height="52*"/>
                <RowDefinition Height="77*"/>
            </Grid.RowDefinitions>
        <Button Content="Создать Word документ" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Top" Width="190" Height="30" Click="WordCreate" Margin="0,10,0,0"/>

        <Button Content="Создать Excel документ" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center" Width="190" Height="30" Click="ExcelCreate"/>
        <Button Content="Открыть Word документ" HorizontalAlignment="Center" Grid.Row="3" VerticalAlignment="Center" Width="190" Height="30" Click="WordOpen"/>
        <Button Content="Открыть Excel документ" HorizontalAlignment="Center" Grid.Row="4" VerticalAlignment="Center" Width="190" Height="30" Click="ExcelOpen"/>

    </Grid>
</Window>
